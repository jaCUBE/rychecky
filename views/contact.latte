{layout "@layout.latte"}
{block content}


<div id="contact">
    <div class="row">
        <div class="col-lg-7" style="margin-top: 10px">
            <div class="row" id="contact-table">
                <div class="col-lg-6" id="channels">
                    <div class="email"><a href="mailto:{php echo env('EMAIL') }"> {php echo env('EMAIL') }</a></div>
                    <div class="tel">
                        <a href="tel:{php echo str_replace(' ', '', env('PHONE')) }">
                            {php echo e('', env('PHONE_PREFIX')) }    {php echo env('PHONE') }
                        </a>
                    </div>
                </div>

                <div class="col-lg-6" id="address">
                    <div class="name">Jakub Rychecký</div>
                    <div class="street">{php echo env('ADDR_STREET') } {php echo env('ADDR_STREET_NUMBER') }</div>
                    <div class="city">{php echo env('ADDR_ZIP') } {php echo env('ADDR_CITY') }</div>
                </div>
            </div>


            <div id="detail">
                <span class="vac">
                    <i class="fa fa-suitcase"></i>
                    {php echo e('IČ', 'VAT') }: {php echo env('VAC') }
                </span>
                <span class="bank">
                    <i class="fa fa-institution"></i>
                    {php echo e('Účet', 'Bank') }: {php echo env('BANK') }
                </span>
                <div class="vat">
                    {php echo e('Nejsem plátce DPH.', 'I do not pay VAT.') }
                </div>
            </div>

            <hr class="clear"/>

            {include 'partials/socialbar.latte'}
        </div>


        <div class="col-lg-5 center">
            <img src="/images/qr.png" alt="QR kód" class="qr d-none d-lg-block"/>
        </div>
    </div>


    {var $fullAddress = env('ADDR_STREET') . ' ' . env('ADDR_STREET_NUMBER') . ', ' . env('ADDR_ZIP') . ' ' . env('ADDR_CITY')}
    {var $googleMapsUrl = urlencode($fullAddress) . '&zoom=10&key=' . env('GOOGLE_MAPS_API') }
    <iframe height="450"
            frameborder="0"
            id="gmap-iframe"
            src="https://www.google.com/maps/embed/v1/place?q={$googleMapsUrl}">
    </iframe>
</div>