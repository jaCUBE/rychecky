{layout "@layout.latte"}
{block content}


<h2>
    <i class="fa fa-certificate"></i> {php echo e('Certifikace', 'Certificates') }
</h2>

<div id="certificate">
    <ul class="timeline">
        <li n:foreach="$list as $certificate"
                data-type="{$certificate->getType()}"
                class="event {php echo make_css_name($certificate->getType()) }">

            <div class="date">
                <span class="start">{$certificate->getIssueDate()|date:'n/Y'}</span>
            </div>

            <div class="title">
                {$certificate->getName()}
            </div>

            <div class="company">
                <i class="fa fa-certificate"></i> {$certificate->getIssueBy()}
            </div>

            <div class="detail">{$certificate->getDetail()}</div>

            <div class="center">
                <a href="{$certificate->getUrl()}" class="btn btn-sm btn-light">
                    <i class="fa fa-globe"></i> {php echo e('Certifik√°t', 'Certificate') }
                </a>
            </div>
        </li>
    </ul>
</div>